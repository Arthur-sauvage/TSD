@model IEnumerable<Yummy.Models.Recipes>

@{
    ViewData["Title"] = "Yummy";
}

<h1>Yummy</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Recipes" asp-action="Index" method="get">
